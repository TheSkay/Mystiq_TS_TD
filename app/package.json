{
    "name": "app",
    "version": "1.0.0",
    "scripts": {
        "build": "tsc",
        "start": "node dist/app.js",
        "dev": "nodemon -e ts,html,css,js,png  --exec \"npm run build && npm run start\" --watch src",
        "postbuild": "copyfiles -u 1 src/**/*.{html,css,js,png,jpg} dist/"
    },
    "devDependencies": {
        "@types/express": "5.0.0",
        "@types/prompt-sync": "^4.2.3",
        "@types/socket.io": "3.0.1",
        "@types/uuid": "^10.0.0",
        "copyfiles": "2.4.1",
        "nodemon": "3.1.7",
        "typescript": "5.6.3"
    },
    "dependencies": {
        "express": "4.21.1",
        "socket.io": "4.8.0",
        "uuid": "10.0.0"
    }
}
